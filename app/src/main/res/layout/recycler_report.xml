<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="3dp">

        <TextView
            android:id="@+id/tvId"
            style="@style/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:paddingVertical="5dp"
            android:text="userid"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal"
            android:gravity="center"
            android:visibility="gone"/>
    <TextView
            android:id="@+id/tvLearner"
            style="@style/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:paddingVertical="5dp"
            android:text="Level 1"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal"
            android:gravity="start"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvEnrolledHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="3dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="Ayizwe"/>
                <TextView
                    android:id="@+id/tvEnrolled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="3dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="0"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvCompletedHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="3dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="Ayamaze kwigwa"/>
                <TextView
                    android:id="@+id/tvCompleted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="3dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="0"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvOngoingHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="3dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="Ari kwigwa"/>
                <TextView
                    android:id="@+id/tvOngoing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="3dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="0"/>
            </LinearLayout>
        </GridLayout>
</LinearLayout>